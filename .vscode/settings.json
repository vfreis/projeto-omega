{
    "python": {
        "languageServer": "Pylance",
        "jediEnabled": false,
        "linting": {
            "flake8Enabled": true,
            "pylintEnabled": true,
            "pylintCategorySeverity": {
                "convention": "Information",
                "refactor": "Information",
                "warning": "Information",
                "error": "Information",
                "fatal": "Information"
            },
            "pylintUseMinimalCheckers": false,
        },
        "testing": {
            "unittestArgs": [
                "-v",
                "-s",
                "./tests",
                "-p",
                "test_*.py"
            ],
            "pytestEnabled": false,
            "unittestEnabled": true
        },
    },
}